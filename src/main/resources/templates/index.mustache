{{>layout/header}}
<h1>Web Service!!</h1>
<div class="col-md-12">
  <!-- login  -->
  <div class="row">
    <div class="col-md-6">
      <a href="/posts/save" role="button" class="btn btn-primary">add post</a>

      {{#userName}}
      Logged in as : <span id="user">{{ userName }}</span>
      <a href="/logout" class="btn btn-info active">Logout</a>
      {{/userName}}
      {{^userName}}
      <a
        href="/oauth2/authorization/google"
        class="btn btn-success active"
        role="button"
        >Google Login</a
      >
      {{/userName}}
    </div>
  </div>
  <br />
  <table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
      <tr>
        <th>no</th>
        <th>title</th>
        <th>author</th>
        <th>modifed date</th>
      </tr>
    </thead>
    <tbody id="tbody">
      {{#posts}}
      <tr>
        <td>{{ id }}</td>
        <td>
          <a href="/posts/update/{{ id }}"> {{ title }} </a>
        </td>
        <td>{{ author }}</td>
        <td>{{ modifiedDate }}</td>
      </tr>
      {{/posts}}
    </tbody>
  </table>
</div>
{{>layout/footer}}
